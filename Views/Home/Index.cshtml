@{
    Layout = "_Layout";
}

@section Styles {
    <style>
        .hero-section {
            background-image: linear-gradient(to bottom right, #eff6ff, #e0e7ff);
        }
    </style>
}

<section id="hero" class="min-h-screen hero-section flex items-center">
    <div class="container mx-auto px-6 py-20">
        <div class="max-w-4xl mx-auto text-center">
            <div class="mb-8 animate-fade-in">
                <h1 class="text-5xl md:text-7xl font-bold text-gray-900 mb-6">
                    Hi, I'm <span class="text-blue-600">Kumar Siva Ganesh Sai Krishna Meesala</span>
                </h1>
                <h2 class="text-2xl md:text-3xl text-gray-700 mb-8">
                    Freelance .NET Developer & Software Engineer
                </h2>
                <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
                    I help businesses build scalable and efficient applications using modern .NET technologies,
                    delivering clean architecture, secure APIs, and user-friendly interfaces.
                </p>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
                <a href="@Url.Action("Projects", "Home")" class="px-8 py-4 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-all duration-200 transform hover:scale-105 shadow-lg">
                    View My Work
                </a>
                <a href="@Url.Action("Contact", "Home")" class="px-8 py-4 border-2 border-blue-600 text-blue-600 rounded-lg font-semibold hover:bg-blue-600 hover:text-white transition-all duration-200 transform hover:scale-105">
                    <i class="mr-2" data-lucide="mail"></i>
                    Hire Me
                </a>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-2xl mx-auto">
                <div class="text-center">
                    <div class="text-3xl font-bold text-blue-600">3+</div>
                    <div class="text-gray-600">Years Experience</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-blue-600">5+</div>
                    <div class="text-gray-600">Projects Completed</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-blue-600">500+</div>
                    <div class="text-gray-600">Lines of Code Written</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-blue-600">99%</div>
                    <div class="text-gray-600">Client Satisfaction</div>
                </div>
            </div>
        </div>

        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
            <a href="#about" class="p-2 text-gray-600 hover:text-blue-600 transition-colors duration-200">
                <i data-lucide="chevron-down" class="w-8 h-8"></i>
            </a>
        </div>
    </div>
</section>
