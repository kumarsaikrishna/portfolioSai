@{
    ViewData["Title"] = "Services";
    var services = (List<Portfolio.Models.Service>)ViewData["Services"];
}

<section class="py-20 bg-gray-50" id="services">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">My Services</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                I specialize in building scalable, robust, and maintainable .NET-based web applications and services.
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            @foreach (var service in services)
            {
                <div class="bg-white shadow-lg rounded-xl p-6 transition-transform duration-300 hover:-translate-y-1 hover:shadow-xl">
                    <div class="mb-4 text-blue-600 flex justify-center">
                        <i data-lucide="@service.Icon" class="w-8 h-8"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2 text-center">
                        @service.Title
                    </h3>
                    <p class="text-gray-600 text-sm mb-4 text-center">
                        @service.Description
                    </p>
                    <ul class="list-disc list-inside text-sm text-gray-700">
                        @foreach (var feature in service.Features)
                        {
                            <li>@feature</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</section>
