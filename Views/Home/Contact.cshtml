@model Portfolio.Models.ContactFormModel
@{
    ViewData["Title"] = "Contact";
}

<section class="py-20 bg-gray-50" id="contact">
    <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
            <div class="text-center mb-12">
                <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Let's Connect</h2>
                <p class="text-lg text-gray-600">
                    Interested in working together or have any questions? Reach out through the form below or via the contact info.
                </p>
            </div>

            @if (TempData["Message"] != null)
            {
                <div class="mb-6 p-4 bg-green-100 text-green-800 border border-green-300 rounded">
                    @TempData["Message"]
                </div>
            }

            <div class="grid md:grid-cols-2 gap-8">
                <!-- Contact Info -->
                <div class="space-y-6">
                    <div>
                        <h3 class="text-xl font-semibold text-gray-800 mb-2">Contact Info</h3>
                        <p class="text-gray-700"><strong>Name:</strong> MEESALA Kumar Siva Ganesh Sai Krishna</p>
                        <p class="text-gray-700"><strong>Company:</strong> TechDevelopers Freelancing</p>
                        <p class="text-gray-700"><strong>Email:</strong> <a href="mailto:techdevelopers2025@gmail.com" class="text-blue-600 hover:underline">techdevelopers2025@gmail.com</a></p>
                        <p class="text-gray-700"><strong>Mobile:</strong> +91 91XXXXXXXX</p>
                    </div>
                </div>

                <!-- Contact Form -->
                <div>
                    <form asp-action="Contact" method="post" class="space-y-6 bg-white p-6 rounded-xl shadow-md">
                        <div>
                            <label asp-for="Name" class="block text-sm font-medium text-gray-700">Name</label>
                            <input asp-for="Name" class="mt-1 w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring focus:ring-blue-200" />
                            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                            <input asp-for="Email" type="email" class="mt-1 w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring focus:ring-blue-200" />
                            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Message" class="block text-sm font-medium text-gray-700">Message</label>
                            <textarea asp-for="Message" rows="4" class="mt-1 w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring focus:ring-blue-200"></textarea>
                            <span asp-validation-for="Message" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

